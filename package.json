{
  "name": "snu-plp-hub",
  "version": "1.0.0",
  "description": "SNU Political Leaders Program Hub",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix snu-political-leaders-hub",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd snu-political-leaders-hub && npm install && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix snu-political-leaders-hub && npm run build --prefix snu-political-leaders-hub"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "vite": "^6.2.1"
  }
}
